@model List<Gonderi>
@{
    ViewData["Title"] = ViewBag.Baslik ?? "Yazilarim";
}

<h3 class="pb-4 mb-4 fst-italic border-bottom">
    @*@(ViewBag.Baslik==null ? "Yazılarım" : ViewBag.Baslik)*@
    @*@(ViewBag.Baslik ?? "Yazilarim")*@
    @ViewData["Title"]
</h3>

@foreach (var gonderi in Model)
{
    <article class="blog-post">
        <h2 class="blog-post-title mb-1">@gonderi.Baslik</h2>
        <p class="blog-post-meta"> <a href="#">Yonetici</a> tarafından @gonderi.OlusturulmaZamani.ToShortDateString() tarihinde yazıldı</p>

        @Html.Raw(gonderi.Icerik)
    </article>
}